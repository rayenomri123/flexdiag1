{
  "name": "flexdiag",
  "private": true,
  "version": "0.0.0",
  "description": "desktop diagconfig tool",
  "homepage": "https://github.com/rayenomri123/flexdiag",
  "type": "commonjs",
  "main": "./electron/main.js",
  "author": {
    "name": "OMRI Rayen",
    "email": "rayenomri23p@gmail.com"
  },
  "scripts": {
    "postinstall": "electron-rebuild",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "concurrently \"npm:dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:prod": "npm run build && electron .",
    "predist": "npm run build",
    "dist": "electron-builder --publish never"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "sqlite3": "^5.1.7",
    "systeminformation": "^5.27.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "concurrently": "^9.2.0",
    "electron": "^37.2.1",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "vite": "^7.0.4",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.yourcompany.flexdiag",
    "productName": "FlexDiag",
    "asar": true,
    "npmRebuild": false,
    "buildDependenciesFromSource": true,
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "database/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "dhcp_server/dist",
        "to": "dhcp_server/dist",
        "filter": ["**/*"]
      },
      { "from": "log_orchestrator/dist",     
        "to": "log_orchestrator/dist",
        "filter": ["**/*"]
      },
      { "from": "uds/dist",     
        "to": "uds/dist",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "linux": {
      "maintainer": "OMRI Rayen <rayenomri23p@gmail.com>",
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon.png"
    },
    "publish": null
  }
}
